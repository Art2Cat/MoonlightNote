<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="bottom"
    android:background="@android:drawable/bottom_bar"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottomBar_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_camera_alt_cyan_400_48dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bottomBar_audio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/bottomBar_camera"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_keyboard_voice_cyan_400_48dp" />

    <com.art2cat.dev.moonlightnote.View.CustomSpinner
        android:id="@+id/bottomBar_label"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp" />
</RelativeLayout>